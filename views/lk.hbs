<div id="newDeckDiv">
  <form action="/deck/new" method="post" name="newDeck" id="newDeck">
    <br>
    <input name="deckName" id="deckName" type="text" placeholder="Enter a deck name" required>
    <br>
    <input name="gameFormat" id="gameFormat" type="text" placeholder="Enter a game format">
    <br>
    <button type="submit">Create a deck</button>
  </form>
  <br>
  <h4>Your decks:</h4>
  <div id="deckList">
    <ul>
      {{#each deckList}}
      <li><a href="/deck/{{_id}}">{{name}}</a>, format: {{gameFormat}}</li>
      {{/each}}
    </ul>
  </div>
  <div id="decksEmptyDiv"></div>
</div>

<div id="searchFormDiv">
  <h2>Here you can find cards of MTG</h2>
  <form id="searchForm" action="/result" method="POST">
    <div class="form-group row">
      <label for="inputEmail3" class="col-sm-10 col-form-label">Enter card name to search:</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="inputEmail3" placeholder="card name" name="cardName" required>
      </div>
    </div>
    <div class="form-group row">
      <label for="inputPassword3" class="col-sm-5 col-form-label">Sort by:</label>
      <div class="col-sm-10">
        <select id="sort" class="form-control">
          <option selected></option>
          <option value="prices.usd">Price</option>
          <option value="cmc">Converted manacost</option>
          <option value="name">A-z</option>
        </select>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-15" style="margin-top: 37px;">
        <button type="submit" class="btn btn-primary">Search</button>
      </div>
    </div>
  </form>
  <br>
  <div id="searchResult"></div>
</div>
